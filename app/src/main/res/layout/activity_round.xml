<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_select_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp"
        android:gravity="bottom|center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btnRound16"
            android:layout_width="170dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/round_16_button" />
        <ImageButton
            android:id="@+id/btnRound8"
            android:layout_width="170dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/round_8_button"/>
        <ImageButton
            android:id="@+id/btnRound4"
            android:layout_width="170dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/round_4_button"/>

    </LinearLayout>

</LinearLayout>